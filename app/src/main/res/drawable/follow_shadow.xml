<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="-1dp"
    android:top="-1dp"
    android:right="-1dp"
    android:bottom="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFF5F5F5"/>

            <corners
                android:radius="20dp"/>

        </shape>
    </item>
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle" >

            <gradient
                android:angle="270"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF" />

            <corners
                android:radius="20dp" />
        </shape>
    </item>



</layer-list>