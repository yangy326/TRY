<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:expandableTextView="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="18dp">
        <TextView
            android:id="@+id/txt_item_label"



            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课后跟进"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/txt_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-03-07   21:22"
                android:textColor="#FF9B9B9B "
                android:textSize="11sp"/>
            <TextView
                android:layout_marginLeft="9dp"
                android:id="@+id/txt_item_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF9B9B9B "
                android:textSize="11sp"
                android:text="周杰伦"

                 />
        </LinearLayout>

        <cn.carbs.android.expandabletextview.library.ExpandableTextView
            android:id="@+id/expand_txt_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="天青色等烟雨而我在等你天青色等烟雨而我在等你天青色等烟雨而我在等你天青色等烟雨而我在等你天青色等烟雨而我在等你天青色等烟雨而我在等你"
            android:textSize="14sp"
            android:textColor="#FF373737 "
            app:etv_MaxLinesOnShrink="2"
            app:etv_EllipsisHint="..."
            app:etv_ToExpandHint="展开全文"
            app:etv_ToShrinkHint="收起"
            app:etv_EnableToggle="false"
            app:etv_ToExpandHintColor="#FF7FD4FF "
            app:etv_ToShrinkHintColorBgPressed="#FF7FD4FF"/>





        <LinearLayout
            android:id="@+id/media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp">
            <ImageView
                android:id="@+id/img_item_play"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/play" />

            <TextView
                android:id="@+id/txt_audio_time"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:text="00:03"
                android:textColor="#FF9B9B9B "
                android:textSize="11sp" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_gravity="center"

                android:text="/"
                android:textColor="#FF9B9B9B "
                android:textSize="11sp" />
            <TextView
                android:id="@+id/txt_audio_alltime"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_gravity="center"

                android:text="00:03"
                android:textColor="#FF9B9B9B "
                android:textSize="11sp" />

            <SeekBar
                android:max="100"
                android:progress="50"
                android:paddingTop="2dp"
                android:background="@drawable/seekbar"
                 android:id="@+id/bar_audio_progress"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFF1F1F1 "
            android:layout_marginTop="15dp"
            />

    </LinearLayout>





</LinearLayout>